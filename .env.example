# Environment Variables Template for Obsidian Agent
# Copy this file to .env and fill in your values

# ==============================================================================
# OBSIDIAN VAULT CONFIGURATION
# ==============================================================================

# Path to your Obsidian vault
OBSIDIAN_VAULT_PATH=

# Folders to exclude from indexing (comma-separated)
OBSIDIAN_VAULT__EXCLUDE_FOLDERS=.obsidian,templates,_archive

# File patterns to exclude (comma-separated)
OBSIDIAN_VAULT__EXCLUDE_PATTERNS=*.tmp,*.bak


# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# Path to SQLite database file
# Windows example: C:\Users\YourName\.local\share\obsidian-agent\vault.db
# Linux/Mac example: ~/.local/share/obsidian-agent/vault.db
OBSIDIAN_DATABASE__PATH=

# Enable automatic backups
OBSIDIAN_DATABASE__BACKUP_ENABLED=true

# Backup interval in hours
OBSIDIAN_DATABASE__BACKUP_INTERVAL_HOURS=24

# Connection pool size
OBSIDIAN_DATABASE__CONNECTION_POOL_SIZE=5


# ==============================================================================
# VECTOR STORE CONFIGURATION (ChromaDB)
# ==============================================================================

# Vector store provider (currently only chromadb supported)
OBSIDIAN_VECTOR_STORE__PROVIDER=chromadb

# Embedding model for semantic search
# Options: all-MiniLM-L6-v2, all-mpnet-base-v2, multi-qa-mpnet-base-dot-v1
OBSIDIAN_VECTOR_STORE__EMBEDDING_MODEL=all-MiniLM-L6-v2

# ChromaDB collection name
OBSIDIAN_VECTOR_STORE__COLLECTION_NAME=obsidian_notes

# ChromaDB persist directory
# Windows example: C:\Users\YourName\.local\share\obsidian-agent\chroma
# Linux/Mac example: ~/.local/share/obsidian-agent/chroma
OBSIDIAN_VECTOR_STORE__PERSIST_DIRECTORY=

# Batch size for generating embeddings
OBSIDIAN_VECTOR_STORE__BATCH_SIZE=100


# ==============================================================================
# SEARCH CONFIGURATION
# ==============================================================================

# Default number of search results
OBSIDIAN_SEARCH__DEFAULT_LIMIT=10

# Semantic similarity threshold (0.0 to 1.0)
OBSIDIAN_SEARCH__SEMANTIC_THRESHOLD=0.7

# Enable result reranking
OBSIDIAN_SEARCH__ENABLE_RERANKING=true


# ==============================================================================
# INDEXING CONFIGURATION
# ==============================================================================

# Files to process per batch
OBSIDIAN_INDEXING__BATCH_SIZE=100

# Maximum file size to index (in MB)
OBSIDIAN_INDEXING__MAX_FILE_SIZE_MB=10

# Interval for incremental updates (in seconds)
OBSIDIAN_INDEXING__UPDATE_INTERVAL_SECONDS=300


# ==============================================================================
# AI SERVICE CONFIGURATION (For TypeScript Plugin)
# ==============================================================================

# AI Provider: openai, anthropic, ollama, custom
AI_PROVIDER=openai

# API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Custom API URL (for Ollama or other providers)
CUSTOM_API_URL=http://localhost:11434

# Model to use
AI_MODEL=gpt-4

# Temperature (0.0 to 1.0)
AI_TEMPERATURE=0.7

# Maximum tokens in response
AI_MAX_TOKENS=2000


# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Enable console logging
LOG_ENABLE_CONSOLE=true

# Maximum log entries to keep in memory
LOG_MAX_ENTRIES=1000


# ==============================================================================
# API SERVER CONFIGURATION (Optional)
# ==============================================================================

# Enable API server
API_SERVER_ENABLED=false

# API server host
API_SERVER_HOST=127.0.0.1

# API server port
API_SERVER_PORT=8000

# Enable auto-reload (development only)
API_SERVER_RELOAD=false


# ==============================================================================
# CACHE CONFIGURATION
# ==============================================================================

# Enable response caching
CACHE_ENABLED=true

# Maximum cache entries
CACHE_MAX_ENTRIES=100

# Cache entry TTL (in days)
CACHE_MAX_AGE_DAYS=30

# Cache match threshold (1.0 = exact match only)
CACHE_MATCH_THRESHOLD=1.0


# ==============================================================================
# PERFORMANCE TUNING
# ==============================================================================

# Enable embeddings generation (slower but enables semantic search)
ENABLE_EMBEDDINGS=true

# Use GPU for embeddings (if available)
USE_GPU=false

# Number of worker threads
WORKER_THREADS=4


# ==============================================================================
# DEVELOPMENT / DEBUGGING
# ==============================================================================

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Enable performance profiling
ENABLE_PROFILING=false
