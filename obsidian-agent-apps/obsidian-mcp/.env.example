# Obsidian MCP Server Configuration
# Copy this file to .env and fill in your values

# Obsidian Local REST API Token
# Get this from Obsidian → Settings → Local REST API
OBSIDIAN_API_TOKEN=your_api_token_here

# Obsidian API URL (default port for Local REST API)
OBSIDIAN_API_URL=http://127.0.0.1:27123

# Vault path (optional)
VAULT_PATH=/path/to/your/vault

# Server settings
SERVER_NAME=obsidian-mcp
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Feature flags
ENABLE_GRAPH_ANALYSIS=true
ENABLE_TEMPLATES=true
ENABLE_CANVAS=true
